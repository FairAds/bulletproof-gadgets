{
    "title": "profile_schema",
    "type": "object",
    "properties": {
        "profile": {
            "type": "object",
            "description": "The owner's profile",
            "properties": {
                "firstName": {
                    "type": "string",
                    "description": "The owner's first name."
                },
                "lastName": {
                    "type": "string",
                    "description": "The owner's last name."
                },
                "dateOfBirth": {
                    "description": "The owner's date of birth.",
                    "type": "object",
                    "properties": {
                        "day": {
                            "type": "number",
                            "minimum": 1,
                            "maximum": 31
                        },
                        "month": {
                            "type": "number",
                            "minimum": 1,
                            "maximum": 12
                        },
                        "year": {
                            "type": "number"
                        }
                    }
                },
                "placeOfBirth": {
                    "type": "string",
                    "description": "The owner's place of birth."
                }
            }
        },
        "finance": {
            "type": "object",
            "description": "The owner's finance",
            "properties": {
                "btcBalance": {
                    "type": "number",
                    "description": "The owner's btc balance."
                },
                "bankBalance": {
                    "type": "number",
                    "description": "The owner's bank balance."
                }
            }
        },
        "personal": {
            "type": "object",
            "description": "The owner's personal information",
            "properties": {
                "hasChildren": {
                    "type": "number",
                    "description": "The owner has children."
                },
                "likesPizza": {
                    "type": "number",
                    "description": "The owner likes pizza."
                }
            }
        },
        "rootHash_hex": {
            "type": "string",
            "description": "The root hash of this profile."
        }
    },
    "validationRule": "PROOF FOR THIS THAT public.rootHash_hex IS MERKLE ROOT OF (((private.profile.firstName, private.profile.lastName),((private.profile.dateOfBirth.day, private.profile.dateOfBirth.month),(private.profile.dateOfBirth.year, private.profile.placeOfBirth))),((private.finance.btcBalance, private.finance.bankBalance),(private.personal.likesPizza, private.personal.hasChildren)))"
}


